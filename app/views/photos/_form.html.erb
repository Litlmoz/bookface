<%= simple_form_for(@photo, html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :image %>
    <%= f.input :caption, :input_html => { maxlength: 23} %>
    <%= f.input :presentation_order, collection: 1..100 %>
    <%= f.button :submit, class: 'col-sm-offset-2 btn btn-default' %>
    <% end %>
