<!DOCTYPE html>
<html>
  <body>
    <section>
      <div class='col-xs-10 col-xs-offset-1'>
        <h2>Modify Photo</h2>
        <%= render 'form' %>
        <%= link_to @photo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'col-sm-offset-2 btn btn-danger' do %>
          <span class='glyphicon glyphicon-trash'></span>
        <% end %>
        <%= link_to 'Back', photos_path, class:'col-sm-offset-2 btn btn-primary' %>
      </div>
    </section>
  </body>
</html>
