<!DOCTYPE html>
<html>
  <body>
    <section>
      <div class='container'>
        <h1>PHOTOS</h1>
      </div>
        <div class='container'>
          <div class='row'>
            <% @photos.each do |photo| %>
              <div class='col-sm-6 col-md-4'>
                <div class='thumbnail'>
                  <%= link_to image_tag(photo.image), class: 'img-responsive' %>
                </div>
              </div>
            <% end %>
          </div>
          <%= link_to 'New Photo', new_photo_path %>
        </div>
        <%= yield %>
    </section>
  </body>
</html>
