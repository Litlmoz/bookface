<!DOCTYPE html>
<html>
  <body>
    <section>
        <div class='wrapper container col-xs-10 col-xs-offset-1 col-sm-9 col-sm-offset-1 col-md-8 col-md-offset-2'>
          <%= image_tag 'camera.png', class: :'img-responsive header-photo', alt: 'camera' %>

          <% if can? :manage, Photo %>
            <%= link_to 'Upload Photo', new_photo_path, class: 'col-sm-offset-2 btn btn-success' %>
          <% end %>

          <div class='row'>
            <% @photos.each do |photo| %>
              <div class='col-sm-6 col-md-4'>
                <div class='thumbnail'>
                  <%= link_to photo do %>
                    <%= image_tag photo.image %>
                  <% end %>
                </div>
                <div class='caption text-center'>
                  <p><%= photo.text.downcase.titleize %><p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
    </section>
  </body>
</html>
