<!DOCTYPE html>
<html>
  <head>
    <title>Years & Years</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
    <body>
      <nav class="w3-sidenav w3-card-2 w3-deep-orange" style="display:none">
        <a href="javascript:void(0)"
        onclick="w3_close()"
        class="w3-closenav w3-large">&times;</a>
        <a href='#' class='w3-large'>blog</a>
        <a href='<% link_to 'New Photo', new_photo_path %>' class='w3-large'>gallery</a>
        <a href='#' class='w3-large'>about me</a>
      </nav>
      <div id="main">
        <header class="w3-container w3-deep-orange">
          <span class="w3-opennav w3-xlarge" onclick="w3_open()">&#9776;</span>
          <h1>D/\VID</h1>
        </header>
        <%= yield %>
        <footer>
          <a href="https://twitter.com/soliskit"><img src="https://s3-us-west-1.amazonaws.com/soliskit/twitter-wrap.png" alt="Twitter Logo" class="social-icon"></a>
          <a href="https://facebook.com/litlmoz"><img src="https://s3-us-west-1.amazonaws.com/soliskit/facebook-wrap.png" alt="Facebook Logo" class="social-icon"></a>
          <p>&copy; 2016 David Solis.</p>
        </footer>
      </div>
    <script>
  function w3_open() {
    document.getElementById("main").style.marginLeft = "25%"
    document.getElementsByClassName("w3-sidenav")[0].style.width ="25%";
    document.getElementsByClassName("w3-sidenav")[0].style.display = "block";
    document.getElementsByClassName("w3-opennav")[0].style.display = 'none';
    }
  function w3_close() {
    document.getElementById("main").style.marginLeft = "0%";
    document.getElementsByClassName("w3-sidenav")[0].style.display = "none";
    document.getElementsByClassName("w3-opennav")[0].style.display = "inline-block";
    }
    </script>
  </body>
</html>
