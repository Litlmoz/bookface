<%= simple_form_for(@user, html: { class: 'form-horizontal'} ) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :admin, as: :boolean, wrapper: :vertical_boolean %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit, class: 'col-sm-offset-2 btn btn-success' %>
<% end %>
