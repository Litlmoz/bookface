<p id="notice"><%= notice %></p>

  <h2>Blog</h2>

<div class='container wrapper col-xs-10 col-xs-offset-1'>
  <h2><%= @blog.title %></h2>
</div>

<div class='container wrapper col-xs-10 col-xs-offset-1'>
  <h2><%= @blog.post %></h2>
  <%= (@blog.post_date).to_formatted_s(:rfc822) %><br>
  <% if can? :manage, Blog %>
    <div class='btn-group'>
      <%= link_to 'Edit', edit_blog_path(@blog), class:'col-sm btn btn-default' %>
      <%= link_to 'Back', blogs_path, class:'col-sm btn btn-default' %>
    </div>
  <% end %>
</div>
