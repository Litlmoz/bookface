<!DOCTYPE html>
<html>
  <body>
    <section>
      <div class='container'>
        <% if can? :manage, Blog %>
          <%= link_to 'Edit', edit_blog_path(@blog), class:'col-sm-offset-2 btn btn-primary' %>
        <% end %>
      </div>

      <article id='post' class='col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3'>
        <dl>
          <dt>
            <h3 class='text-center'>
              <%= @blog.title %>
            </h3>
          </dt>
          <dd>
            <%= simple_format(@blog.post) %>
          </dd>
          <dd>
            <blockquote class="blockquote-reverse" style='font-size: 13px;'>
              <%= (@blog.post_date).to_formatted_s(:rfc822) %>
            </blockquote>
          </dd>
        </dl>
      </article>
    </section>
  </body>
</html>
