<%= image_tag 'quill.svg', class: :'img-responsive header-photo', alt: 'quil' %>

<% if can? :manage, Blog %>
  <%= link_to 'New Post', new_blog_path, class: 'col-sm-offset-2 btn btn-success' %>
<% end %>

<div class='col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3'>
  <% @blogs.each do |blog| %>
    <dl>
      <dt>
        <h3 class='text-center'>
          <%= blog.title %>
        </h3>
      </dt>
      <dd>
        <%= simple_format(blog.post) %>
      </dd>
      <dd>
        <blockquote class="blockquote-reverse" style='font-size: 13px;'>
          <%= (blog.post_date).to_formatted_s(:rfc822) %>
        </blockquote>
      </dd>
    </dl>
  <% end %>
</div>
</div>
