<%= image_tag 'quil.png', class: :'img-responsive header-photo', alt: 'quil' %>

<% if can? :manage, Blog %>
  <%= link_to 'New Post', new_blog_path, class: 'col-sm-offset-2 btn btn-success' %>
<% end %>

<div class='row'>
  <% @blogs.each do |blog| %>
    <dl class='col-sm-9 col-sm-offset-1 col-md-8 col-md-offset-2'>
      <dt>
        <h3 class='text-center'>
          <%= blog.title %>
        </h3>
      </dt>
      <dd>
        <%= simple_format(blog.post) %>
      </dd>
      <dd>
        <%= link_to blog, class: 'col-xs-offset-9 col-sm-offset-10 label label-default' do %>
          <span><%= (blog.post_date).to_formatted_s(:rfc822) %></span>
        <% end %>
      </dd>
    </dl>
  <% end %>
</div>
