<!DOCTYPE html>
<html>
  <body>
    <section>
      <div class='container-fluid'>
        <%= image_tag 'quill.svg', class: :'header-photo', alt: 'quil' %>

        <article id='firstpost' class='col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3'>
          <dl>
            <dt>
              <h3 class='text-center'>
                <%= @main_post.title %>
              </h3>
            </dt>
            <dd>
              <%= simple_format(@main_post.post) %>
            </dd>
            <dd>
              <blockquote class="blockquote-reverse" style='font-size: 13px;'>
                <%= (@main_post.post_date).to_formatted_s(:rfc822) %>
              </blockquote>
            </dd>
          </dl>
        </article>
      </div>
      <br>
      <div class='container wrapper'>
        <h4 class='text-center'>
          Recent Posts
        </h4>
        <div class='col-sm-3 col-sm-offset-2 col-md-3 col-md-offset-2 col-lg-3 col-lg-offset-2 pull left'>
          <%= link_to @main_post, class: ' label label-default' do %>
                  <%= @main_post.title %>
                <% end %>
        </div>
        <div class='col-sm-3 col-sm-offset-2 col-md-3 col-md-offset-2 col-lg-3 col-lg-offset-2 wrapper pull right'>
          <%= @main_post.title %>
        </div>
      </div>
    </section>
  </body>
</html>
