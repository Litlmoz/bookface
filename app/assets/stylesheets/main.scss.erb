@import "bootstrap/variables";

$link-hover-color: #F35E3E;

/********************************
GENERAL
*********************************/
body {
  background-color: #3B2E40;
  color: $body-bg;
}

.wrapper {
  background-color: rgba(97, 115, 244, 0.8);
}

a {
  text-decoration: none;
}

a:hover {
  text-decoration: none;
  color: $link-hover-color;
}

dd, dt {
  line-height: 1.6;
}

.header-photo {
  display: block;
  margin: 20px auto 20px auto;
  max-width: 150px;
  height: auto;
  border-radius: 100%;
  background: white;
}

/********************************
Nav Links
*********************************/
.navbar-default {
  background-color: #3B2E40;
  color: $body-bg;
  border-color: rgba(240, 248, 255, 0);
}

.navbar-default .navbar-nav > li > a {
  text-decoration: none;
  color: $body-bg;
}

.navbar-default .navbar-toggle .icon-bar {
  background-color: white;
}

.navbar-default .navbar-nav > li > a:hover, {
  color: $link-hover-color;
}

.navbar-default .navbar-brand {
  color: $body-bg;
}

.navbar-default .navbar-brand:hover {
  color: $link-hover-color;
}

/********************************
FOOTER
*********************************/
.footer {
  font-size: 0.75em;
  text-align: center;
  clear: both;
  padding-top: 20px;
  color: white;
}

.social-icon {
  width: 20px;
  height: 20px;
  margin: 5px 5px;
}

/********************************
ABOUT ME
*********************************/
.contact-icon {
  width: 20px;
  height: 20px;
}

.contact-icon-group {
  margin: 20px auto 20px auto;
}

.contact-info {
  list-style: none;
}

.contact-info li h5 {
  font-size: 1.3em;
  [class^="icon-"], [class*=" icon-"] {
  }
}

ul li a p {
  font-size: 16px;
  line-height: 0;
}

ul li p {
  font-size: 16px;
  line-height: 0;
}

.contact-info a {
  text-decoration: none;
  color: white;
}

.contact-info a:hover {
  color: #F35E3E;
}

#blog-link {
  text-decoration: underline;
  color: white;
  font-weight: bold;
}

#blog-link:hover {
  text-decoration: underline;
  color: #F35E3E;
}
/********************************
PHOTOS
*********************************/
.caption {
  text-align: center;
}

.photo-show {
  padding-top: 80px;
}
