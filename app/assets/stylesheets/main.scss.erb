/********************************
GENERAL
*********************************/
header {
  padding: 20px 50px;
}

body {
  font-family: 'Helvetica Neue', Helvetica, Ariel, sans-serif;
  background-color: #15131a;
}

#index-photo {
  min-width: 800px;
  top: 0;
  right: 0;
  position: absolute;
  z-index: -1;
  width: 100%;
}

/********************************
FOOTER
*********************************/

footer {
  position: absolute;
  bottom: 0;
  right: 20px;
  font-size: 0.75em;
  text-align: center;
  clear: both;
  padding-top: 20px;
  color: white;
}

.social-icon {
  width: 20px;
  height: 20px;
  margin: 0 5px;
}
