/********************************
GENERAL
*********************************/
body {
  font-family: 'Helvetica Neue', Helvetica, Ariel, sans-serif;
  background-color: #3B2E40;
  color: white;
}

.wrapper {
  background-color: rgba(97, 115, 244, 1.0);
}

a {
  text-decoration: none;
  color: white;
}

a:hover {
  text-decoration: none;
  color: #F35E3E;
}

dd, dt {
  line-height: 1.6;
}

.header-photo {
  display: block;
  margin: 20px auto 20px auto;
  max-width: 150px;
  border-radius: 100%;
  background-color: white;
}

/********************************
HEADER
*********************************/
header {
  padding: 20px 41.984375px;
}

header * {
  color: black;
  text-decoration: none;
}

/********************************
FOOTER
*********************************/
.desktop-footer {
  position: fixed;
  bottom: 0;
  right: 20px;
  font-size: 0.75em;
  text-align: center;
  clear: both;
  padding-top: 20px;
  color: white;
}

.mobile-footer {
  font-size: 0.75em;
  text-align: center;
  clear: both;
  padding-top: 20px;
  color: white;
}

.social-icon {
  width: 20px;
  height: 20px;
  margin: 5px 5px;
}

/********************************
HOMEPAGE
*********************************/
#homepage-photo {
  min-width: 800px;
  width: 100%;
  top: 0;
  right: 0;
  position: absolute;
  z-index: -1;
}

#homepage {
  background-color: #15131a;
}

#homepage+footer {
  position: fixed;
  bottom: 0;
}
/********************************
ABOUT ME
*********************************/

.contact-icon {
  width: 20px;
  height: 20px;
}

.contact-icon-group {
  margin: 20px auto 20px auto;
}

.contact-info {
  list-style: none;
}

.contact-info li h5 {
  font-size: 1.3em;
  [class^="icon-"], [class*=" icon-"] {
  }
}

.contact-info a {
  text-decoration: none;
  color: white;
}

.contact-info a:hover {
  color: #F35E3E;
}

#blog-link {
  text-decoration: none;
  color: #F35E3E;
  font-weight: bold;
}

#blog-link:hover {
  text-decoration: none;
  color: white;
}
/********************************
PHOTOS
*********************************/
.thumbnail {
  margin-bottom: 30px;
  overflow: hidden;
  a {
    display: block;
    overflow: hidden;
  }
}

@media only screen and (min-width : 480px) {
  .thumbnail > a {
    max-height: 133px;
  }
}

@media only screen and (min-width : 768px) and (max-width : 480px) {
  .thumbnail > a {
    max-height: 174px;
  }
}

@media only screen and (min-width : 992px) and (max-width : 768px) {
  .thumbnail > a {
    max-height: 237px;
  }
}

.thumbnail .caption {
  margin-top: 4px
}

.photo-rows {
  margin: 0;
}

#show_photo {
  padding-bottom: 10px;
}
