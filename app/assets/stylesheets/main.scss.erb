@import "bootstrap/variables";

$link-hover-color: #F35E3E;
$body-bg: rgb(51, 51, 51);

/********************************
GENERAL
*********************************/
.wrapper {
  background-color: rgba(97, 115, 244, 0.8);
}

dd, dt {
  line-height: 1.6;
}

.header-photo {
  display: block;
  margin: 20px auto 20px auto;
  max-width: 150px;
  height: auto;
  border-radius: 100%;
  background: white;
}

/********************************
Nav Links
*********************************/
.navbar-default .navbar-header .navbar-brand {
  color: $body-bg;
  font-size: 30px;
}

.navbar-default .navbar-header .navbar-brand:hover {
  color: $link-hover-color;
}

::selection {
  color: $link-hover-color;
  background: 0;
}

.navbar-default .navbar-nav > li > a, {
  color: $body-bg;
}

.navbar-default .navbar-nav > li > a:hover, {
  color: $link-hover-color;
}

/********************************
FOOTER
*********************************/
.footer {
  font-size: 0.75em;
  text-align: center;
  clear: both;
  padding-top: 20px;
}

.social-icon {
  width: 20px;
  height: 20px;
  margin: 5px 5px;
}

/********************************
ABOUT ME
*********************************/
.contact-icon {
  width: 20px;
  height: 20px;
}

.contact-icon-group {
  margin: 20px auto 20px auto;
}

.contact-info {
  list-style: none;
}

.contact-info li h5 {
  font-size: 1.3em;
  [class^="icon-"], [class*=" icon-"] {
  }
}

ul li a p {
  font-size: 16px;
  line-height: 0;
}

ul li p {
  font-size: 16px;
  line-height: 0;
}

.contact-info a {
  text-decoration: none;
  color: $body-bg;
}

.contact-info a:hover {
  color: $link-hover-color;
}

#blog-link {
  text-decoration: underline;
  color: $body-bg;
  font-weight: bold;
}

#blog-link:hover {
  text-decoration: underline;
  color: $link-hover-color;
}
/********************************
PHOTOS
*********************************/
.caption {
  text-align: center;
}

.photo-show {
  padding-top: 25px;
}
