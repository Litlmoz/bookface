@import "bootstrap/variables";

/********************************
GENERAL
*********************************/
body {
  background-color: #3B2E40;
  color: $body-bg;
}

.wrapper {
  background-color: rgba(97, 115, 244, 1.0);
}

a {
  text-decoration: none;
}

a:hover {
  text-decoration: none;
  color: #F35E3E;
}

dd, dt {
  line-height: 1.6;
}

.header-photo {
  display: block;
  margin: 20px auto 20px auto;
  max-width: 150px;
  height: auto;
  border-radius: 100%;
  background: white;
}

/********************************
Nav Links
*********************************/
.navbar-default {
  background-color: #3B2E40;
  color: $body-bg;
  border-color: rgba(240, 248, 255, 0);
}

#my_name {
  top: 50px;
  left: 20px;
  position: absolute;
  z-index: 1;
  color: black;
}

.nav-links h1 * {
  color: black;
}

.navbar-default .navbar-nav > li > a {
  text-decoration: none;
  color: white;
}

.navbar-default .navbar-toggle .icon-bar {
  background-color: white;
}

.navbar-default .navbar-nav > li > a:hover, {
  color: #F35E3E;
}

/********************************
FOOTER
*********************************/
.footer {
  font-size: 0.75em;
  text-align: center;
  clear: both;
  padding-top: 20px;
  color: white;
}

.social-icon {
  width: 20px;
  height: 20px;
  margin: 5px 5px;
}

/********************************
ABOUT ME
*********************************/
.contact-icon {
  width: 20px;
  height: 20px;
}

.contact-icon-group {
  margin: 20px auto 20px auto;
}

.contact-info {
  list-style: none;
}

ul li a p {
  font-size: 16px;
  line-height: 0;
}

ul li p {
  font-size: 16px;
  line-height: 0;
}

.contact-info a {
  text-decoration: none;
  color: white;
}

.contact-info a:hover {
  color: #F35E3E;
}

#blog-link {
  text-decoration: underline;
  color: white;
  font-weight: bold;
}

#blog-link:hover {
  text-decoration: underline;
  color: #F35E3E;
}
/********************************
PHOTOS
*********************************/
.thumbnail {
  margin-bottom: 30px;
  overflow: hidden;
  a {
    display: block;
    overflow: hidden;
  }
}

@media only screen and (min-width : 480px) {
  .thumbnail > a {
    max-height: 133px;
  }
}

@media only screen and (min-width : 768px) and (max-width : 480px) {
  .thumbnail > a {
    max-height: 174px;
  }
}

@media only screen and (min-width : 992px) and (max-width : 768px) {
  .thumbnail > a {
    max-height: 237px;
  }
}

.thumbnail .caption {
  margin-top: 4px
}

.photo-rows {
  margin: 0;
}

.photo {
  display: block;
  max-width: 100%;
  height: auto;
  padding-top: 20px;
}

#show_photo {
  padding: 10px 0px;
}
