/********************************
GENERAL
*********************************/
body {
  font-family: 'Helvetica Neue', Helvetica, Ariel, sans-serif;
  background-color: #3B2E40;
  color: white;
}

/********************************
HEADER
*********************************/
header {
  padding: 20px 50px;
}

header :visited {
  color: black;
  text-decoration: none;
}

header :hover {
  color: #F35E3E;
  text-decoration: none;
}

/********************************
HOMEPAGE
*********************************/
#index-photo {
  min-width: 800px;
  top: 0;
  right: 0;
  position: absolute;
  z-index: -1;
  width: 100%;
}

#homepage {
  background-color: #15131a;
}

/********************************
FOOTER
*********************************/

footer {
  position: fixed;
  bottom: 0;
  right: 20px;
  font-size: 0.75em;
  text-align: center;
  clear: both;
  padding-top: 20px;
  color: white;
}

.social-icon {
  width: 20px;
  height: 20px;
  margin: 5px 5px;
}
